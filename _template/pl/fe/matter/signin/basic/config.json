{
    "path": "/pl/fe/matter/signin/basic",
    "pages": [{
        "name": "signin",
        "title": "签到页",
        "type": "I",
        "data_schemas": [{
            "schema": {
                "id": "name",
                "title": "姓名",
                "type": "shorttext",
                "required": "Y",
                "format": "name"
            },
            "config": {
                "showname": "label"
            }
        }, {
            "schema": {
                "id": "mobile",
                "title": "手机",
                "type": "shorttext",
                "required": "Y",
                "format": "mobile"
            },
            "config": {
                "showname": "label"
            }
        }],
        "act_schemas": [{
            "id": "btnSubmit",
            "name": "submit",
            "label": "签到",
            "next": "_autoForward"
        }]
    }, {
        "name": "success",
        "title": "签到成功页",
        "type": "V",
        "data_schemas": [{
            "config": {
                "id": "s1",
                "pattern": "record",
                "inline": "N",
                "splitLine": "Y"
            },
            "schema": {
                "id": "name",
                "title": "姓名",
                "type": "shorttext",
                "required": "Y",
                "format": "name"
            }
        }, {
            "config": {
                "id": "s2",
                "pattern": "record",
                "inline": "N",
                "splitLine": "Y"
            },
            "schema": {
                "id": "mobile",
                "title": "手机",
                "type": "shorttext",
                "required": "Y",
                "format": "mobile"
            }
        }],
        "act_schemas": [{
            "id": "act2",
            "name": "editRecord",
            "label": "修改签到信息",
            "next": "signin"
        }]
    }, {
        "name": "failure",
        "title": "签到失败页",
        "type": "V",
        "data_schemas": [{
            "config": {
                "id": "s1",
                "pattern": "record",
                "inline": "N",
                "splitLine": "Y"
            },
            "schema": {
                "id": "name",
                "title": "姓名",
                "type": "shorttext",
                "required": "Y",
                "format": "name"
            }
        }, {
            "config": {
                "id": "s2",
                "pattern": "record",
                "inline": "N",
                "splitLine": "Y"
            },
            "schema": {
                "id": "mobile",
                "title": "手机",
                "type": "shorttext",
                "required": "Y",
                "format": "mobile"
            }
        }],
        "act_schemas": [{
            "id": "act2",
            "name": "editRecord",
            "label": "修改签到信息",
            "next": "signin"
        }, {
            "id": "act3",
            "name": "gotoEnroll",
            "label": "填写报名信息"
        }]
    }],
    "schema": [{
        "id": "name",
        "title": "姓名",
        "type": "shorttext",
        "required": "Y",
        "format": "name"
    }, {
        "id": "mobile",
        "title": "手机",
        "type": "shorttext",
        "required": "Y",
        "format": "mobile"
    }],
    "entryRule": {
        "success": {
            "entry": "success"
        },
        "fail": {
            "entry": "failure"
        },
        "otherwise": {
            "entry": "signin"
        }
    }
}
