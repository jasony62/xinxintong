<configuration xmlns="http://logging.apache.org/log4php/">
  <appender name="console" class="LoggerAppenderConsole">
    <layout class="LoggerLayoutSimple" />
  </appender>
  <appender name="files" class="LoggerAppenderRollingFile">
    <layout class="LoggerLayoutSimple" />
    <param name="file" value="/usr/share/nginx/html/log/default.log" />
    <param name="append" value="true" />
    <param name="maxFileSize" value="1MB" />
    <param name="maxBackupIndex" value="5" />
  </appender>
  <root>
    <appender_ref ref="console" />
    <appender_ref ref="files" />
  </root>
</configuration>